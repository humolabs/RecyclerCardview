<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgEscudo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/txtNombreEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imgEscudo"
                android:layout_toEndOf="@+id/imgEscudo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NOMBRE_EQUIPO"
                />

            <TextView
                android:id="@+id/txtCategoriaEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombreEquipo"
                android:layout_toRightOf="@+id/imgEscudo"
                android:layout_toEndOf="@+id/imgEscudo"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="CATEGORIA_EQUIPO"
                />
    </RelativeLayout>
</android.support.v7.widget.CardView>